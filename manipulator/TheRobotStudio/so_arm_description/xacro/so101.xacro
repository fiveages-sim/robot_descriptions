<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="Arm" params="name ">
    <xacro:property name="prefix" value="${name + '_' if name else ''}"/>

    <!-- Frame baseframe (dummy link + fixed joint) -->
    <link name="${prefix}base_link"/>
    <joint name="${prefix}base_joint" type="fixed">
      <origin xyz="-0.020791 -0.0157608 -0.0324817"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}base"/>
    </joint>

    <!-- Link base -->
    <link name="${prefix}base">
      <inertial>
        <origin xyz="0.020739 0.00204287 0.065966"/>
        <mass value="0.147"/>
        <inertia ixx="0.000136117" ixy="4.59787e-07" ixz="9.75275e-08" iyy="0.000114686" iyz="-4.97151e-06"
                 izz="0.000130364"/>
      </inertial>
      <!-- Part base_motor_holder_so101_v1 -->
      <visual>
        <origin xyz="0.0206915 0.0221255 0.0300817" rpy="1.5708 -1.23909e-16 2.33147e-15"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/base_motor_holder_so101_v1.stl"/>
        </geometry>
        <material name="3d_printed"/>
      </visual>
      <collision>
        <origin xyz="0.0206915 0.0221255 0.0300817" rpy="1.5708 -1.23909e-16 2.33147e-15"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/base_motor_holder_so101_v1.stl"/>
        </geometry>
      </collision>
      <!-- Part base_so101_v2 -->
      <visual>
        <origin xyz="0.0207909 0.0221255 0.0300817" rpy="1.5708 -0 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/base_so101_v2.stl"/>
        </geometry>
        <!--      <material name="3d_printed"/>-->
      </visual>
      <collision>
        <origin xyz="0.0207909 0.0221255 0.0300817" rpy="1.5708 -0 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/base_so101_v2.stl"/>
        </geometry>
      </collision>
      <!-- Part waveshare_mounting_plate_so101_v2 -->
      <visual>
        <origin xyz="0.0205915 0.0467435 0.0798817" rpy="1.5708 -1.21716e-14 2.33147e-15"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/waveshare_mounting_plate_so101_v2.stl"/>
        </geometry>
        <material name="3d_printed"/>
      </visual>
      <collision>
        <origin xyz="0.0205915 0.0467435 0.0798817" rpy="1.5708 -1.21716e-14 2.33147e-15"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/waveshare_mounting_plate_so101_v2.stl"/>
        </geometry>
      </collision>
    </link>

    <link name="${prefix}motor1">
      <visual>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
        <material name="sts3215"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
      </collision>
    </link>
    <joint name="${prefix}motor1_joint" type="fixed">
      <origin xyz="0.0207909 -0.0105745 0.0761817" rpy="-2.20282e-15 2.77556e-17 -1.5708"/>
      <parent link="${prefix}base"/>
      <child link="${prefix}motor1"/>
    </joint>

    <!-- Link shoulder -->
    <link name="${prefix}shoulder">
      <inertial>
        <origin xyz="-0.0307604 -1.66727e-05 -0.0252713" rpy="0 0 0"/>
        <mass value="0.100006"/>
        <inertia ixx="8.3759e-05" ixy="7.55525e-08" ixz="-1.16342e-06" iyy="8.10403e-05" iyz="1.54663e-07"
                 izz="2.39783e-05"/>
      </inertial>
      <!-- Part motor_holder_so101_base_v1 -->
      <visual>
        <origin xyz="-0.0675992 -0.000177759 0.0158499" rpy="1.5708 -1.5708 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/motor_holder_so101_base_v1.stl"/>
        </geometry>
        <material name="3d_printed"/>
      </visual>
      <collision>
        <origin xyz="-0.0675992 -0.000177759 0.0158499" rpy="1.5708 -1.5708 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/motor_holder_so101_base_v1.stl"/>
        </geometry>
      </collision>
      <!-- Part rotation_pitch_so101_v1 -->
      <visual>
        <origin xyz="0.0122008 2.22413e-05 0.0464" rpy="-1.5708 -0 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/rotation_pitch_so101_v1.stl"/>
        </geometry>
        <material name="3d_printed"/>
      </visual>
      <collision>
        <origin xyz="0.0122008 2.22413e-05 0.0464" rpy="-1.5708 -0 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/rotation_pitch_so101_v1.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}motor2">
      <!-- Part sts3215_03a_v1_2 -->
      <visual>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
        <material name="sts3215"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
      </collision>
    </link>
    <joint name="${prefix}motor2_joint" type="fixed">
      <origin xyz="-0.0303992 0.000422241 -0.0417" rpy="1.5708 1.5708 0"/>
      <parent link="${prefix}shoulder"/>
      <child link="${prefix}motor2"/>
    </joint>

    <!-- Joint from base to shoulder -->
    <joint name="${prefix}shoulder_pan" type="revolute">
      <origin xyz="0.0207909 -0.0230745 0.0948817" rpy="-3.14159 6.03684e-16 1.5708"/>
      <parent link="${prefix}base"/>
      <child link="${prefix}shoulder"/>
      <axis xyz="0 0 1"/>
      <limit effort="10" velocity="10" lower="-1.91986" upper="1.91986"/>
    </joint>

    <!-- Link upper_arm -->
    <link name="${prefix}upper_arm">
      <inertial>
        <origin xyz="-0.0898471 -0.00838224 0.0184089" rpy="0 0 0"/>
        <mass value="0.103"/>
        <inertia ixx="4.08002e-05" ixy="-1.97819e-05" ixz="-4.03016e-08" iyy="0.000147318" iyz="8.97326e-09"
                 izz="0.000142487"/>
      </inertial>
      <!-- Part upper_arm_so101_v1 -->
      <visual>
        <origin xyz="-0.065085 0.012 0.0182" rpy="3.14159 -9.35612e-32 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/upper_arm_so101_v1.stl"/>
        </geometry>
        <material name="3d_printed"/>
      </visual>
      <collision>
        <origin xyz="-0.065085 0.012 0.0182" rpy="3.14159 -9.35612e-32 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/upper_arm_so101_v1.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}motor3">
      <!-- Part sts3215_03a_v1_3 -->
      <visual>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
        <material name="sts3215"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
      </collision>
    </link>
    <joint name="${prefix}motor3_joint" type="fixed">
      <origin xyz="-0.11257 -0.0155 0.0187" rpy="-3.14159 -6.8695e-16 -1.5708"/>
      <parent link="${prefix}upper_arm"/>
      <child link="${prefix}motor3"/>
    </joint>

    <!-- Joint from shoulder to upper_arm -->
    <joint name="${prefix}shoulder_lift" type="revolute">
      <origin xyz="-0.0303992 -0.0182778 -0.0542" rpy="-1.5708 -1.5708 0"/>
      <parent link="${prefix}shoulder"/>
      <child link="${prefix}upper_arm"/>
      <axis xyz="0 0 1"/>
      <limit effort="10" velocity="10" lower="-1.74533" upper="1.74533"/>
    </joint>

    <!-- Link lower_arm -->
    <link name="${prefix}lower_arm">
      <inertial>
        <origin xyz="-0.0980701 0.00324376 0.0182831" rpy="0 0 0"/>
        <mass value="0.104"/>
        <inertia ixx="2.87438e-05" ixy="7.41152e-06" ixz="1.26409e-06" iyy="0.000159844" iyz="-4.90188e-08"
                 izz="0.00014529"/>
      </inertial>
      <!-- Part under_arm_so101_v1 -->
      <visual>
        <origin xyz="-0.0648499 -0.032 0.0182" rpy="-3.14159 -0 3.9443e-31"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/under_arm_so101_v1.stl"/>
        </geometry>
        <material name="3d_printed"/>
      </visual>
      <collision>
        <origin xyz="-0.0648499 -0.032 0.0182" rpy="-3.14159 -0 3.9443e-31"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/under_arm_so101_v1.stl"/>
        </geometry>
      </collision>
      <!-- Part motor_holder_so101_wrist_v1 -->
      <visual>
        <origin xyz="-0.0648499 -0.032 0.018" rpy="-3.14159 4.73317e-30 7.88861e-31"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/motor_holder_so101_wrist_v1.stl"/>
        </geometry>
        <material name="3d_printed"/>
      </visual>
      <collision>
        <origin xyz="-0.0648499 -0.032 0.018" rpy="-3.14159 4.73317e-30 7.88861e-31"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/motor_holder_so101_wrist_v1.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}motor4">
      <!-- Part sts3215_03a_v1_4 -->
      <visual>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
        <material name="sts3215"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
      </collision>
    </link>
    <joint name="${prefix}motor4_joint" type="fixed">
      <origin xyz="-0.1224 0.0052 0.0187" rpy="-3.14159 -3.58047e-15 -3.14159"/>
      <parent link="${prefix}lower_arm"/>
      <child link="${prefix}motor4"/>
    </joint>

    <!-- Joint from upper_arm to lower_arm -->
    <!-- Note: 5-degree calibration offset applied to joint limits -->
    <joint name="${prefix}elbow_flex" type="revolute">
      <origin xyz="-0.11257 -0.028 2.46331e-16" rpy="-1.22818e-15 5.75928e-16 1.5708"/>
      <parent link="${prefix}upper_arm"/>
      <child link="${prefix}lower_arm"/>
      <axis xyz="0 0 1"/>
      <limit effort="10" velocity="10" lower="-1.69" upper="1.69"/>
    </joint>

    <!-- Link wrist -->
    <link name="${prefix}wrist">
      <inertial>
        <origin xyz="-0.000103312 -0.0386143 0.0281156" rpy="0 0 0"/>
        <mass value="0.079"/>
        <inertia ixx="3.68263e-05" ixy="1.7893e-08" ixz="-5.28128e-08" iyy="2.5391e-05" iyz="3.6412e-06" izz="2.1e-05"/>
      </inertial>
      <!-- Part wrist_roll_pitch_so101_v2 -->
      <visual>
        <origin xyz="0 -0.028 0.0181" rpy="-1.5708 -1.5708 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/wrist_roll_pitch_so101_v2.stl"/>
        </geometry>
        <material name="3d_printed"/>
      </visual>
      <collision>
        <origin xyz="0 -0.028 0.0181" rpy="-1.5708 -1.5708 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/wrist_roll_pitch_so101_v2.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}motor5">
      <!-- Part sts3215_03a_v1_6 -->
      <visual>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
        <material name="sts3215"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
      </collision>
    </link>
    <joint name="${prefix}motor5_joint" type="fixed">
      <origin xyz="5.55112e-17 -0.0424 0.0306" rpy="1.5708 1.5708 0"/>
      <parent link="${prefix}wrist"/>
      <child link="${prefix}motor5"/>
    </joint>

    <!-- Joint from lower_arm to wrist -->
    <joint name="${prefix}wrist_flex" type="revolute">
      <origin xyz="-0.1349 0.0052 1.65232e-16" rpy="3.2474e-15 2.86219e-15 -1.5708"/>
      <parent link="${prefix}lower_arm"/>
      <child link="${prefix}wrist"/>
      <axis xyz="0 0 1"/>
      <limit effort="10" velocity="10" lower="-1.65806" upper="1.65806"/>
    </joint>

    <!-- Link gripper -->
    <link name="${prefix}gripper">
      <inertial>
        <origin xyz="0.000213627 0.000245138 -0.025187" rpy="0 0 0"/>
        <mass value="0.087"/>
        <inertia ixx="2.75087e-05" ixy="-3.35241e-07" ixz="-5.7352e-06" iyy="4.33657e-05" iyz="-5.17847e-08"
                 izz="3.45059e-05"/>
      </inertial>
      <!-- Part wrist_roll_follower_so101_v1 -->
      <visual>
        <origin xyz="5.55112e-17 -0.000218214 0.000949706" rpy="-3.14159 -5.55112e-17 -9.17912e-24"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/wrist_roll_follower_so101_v1.stl"/>
        </geometry>
        <material name="3d_printed"/>
      </visual>
      <collision>
        <origin xyz="5.55112e-17 -0.000218214 0.000949706" rpy="-3.14159 -5.55112e-17 -9.17912e-24"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/wrist_roll_follower_so101_v1.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}motor6">
      <!-- Part sts3215_03a_v1_5 -->
      <visual>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
        <material name="sts3215"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/sts3215_03a_v1.stl"/>
        </geometry>
      </collision>
    </link>
    <joint name="${prefix}motor6_joint" type="fixed">
      <origin xyz="0.0077 0.0001 -0.0234" rpy="-1.5708 -5.55112e-17 -1.38213e-14"/>
      <parent link="${prefix}gripper"/>
      <child link="${prefix}motor6"/>
    </joint>
    <link name="${prefix}camera_support">
      <visual>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/camera_support.stl"/>
        </geometry>
        <material name="3d_printed"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/camera_support.stl"/>
        </geometry>
      </collision>
    </link>
    <joint name="${prefix}camera_support_joint" type="fixed">
      <origin xyz="-0.001 0.025 -0.023" rpy="-1.5708 1.5708 0"/>
      <parent link="${prefix}gripper"/>
      <child link="${prefix}camera_support"/>
    </joint>
    <link name="${prefix}camera">
      <visual>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/camera.obj"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/camera.obj"/>
        </geometry>
      </collision>
    </link>
    <joint name="${prefix}camera_joint" type="fixed">
      <origin xyz="0.024 0 0.0375" rpy="0 0.611 0"/>
      <parent link="${prefix}camera_support"/>
      <child link="${prefix}camera"/>
    </joint>

    <link name="${prefix}camera_len"/>
    <joint name="${prefix}camera_len_joint" type="fixed">
      <origin xyz="0.02 0 0"/>
      <parent link="${prefix}camera"/>
      <child link="${prefix}camera_len"/>
    </joint>

    <!-- Joint from wrist to gripper -->
    <joint name="${prefix}wrist_roll" type="revolute">
      <origin xyz="0 -0.0611 0.0181" rpy="1.5708 -9.38083e-08 3.14159"/>
      <parent link="${prefix}wrist"/>
      <child link="${prefix}gripper"/>
      <axis xyz="0 0 1"/>
      <limit effort="10" velocity="10" lower="-2.74385" upper="2.84121"/>
    </joint>

    <!-- Link moving_jaw_so101_v1 -->
    <link name="${prefix}moving_jaw_so101_v1">
      <inertial>
        <origin xyz="-0.00157495 -0.0300244 0.0192755" rpy="0 0 0"/>
        <mass value="0.012"/>
        <inertia ixx="6.61427e-06" ixy="-3.19807e-07" ixz="-5.90717e-09" iyy="1.89032e-06" iyz="-1.09945e-07"
                 izz="5.28738e-06"/>
      </inertial>
      <!-- Part moving_jaw_so101_v1 -->
      <visual>
        <origin xyz="-5.55112e-17 -1.94746e-17 0.0189" rpy="9.53145e-17 -4.66093e-24 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/moving_jaw_so101_v1.stl"/>
        </geometry>
        <material name="3d_printed"/>
      </visual>
      <collision>
        <origin xyz="-5.55112e-17 -1.94746e-17 0.0189" rpy="9.53145e-17 -4.66093e-24 0"/>
        <geometry>
          <mesh filename="file://$(find so_arm_description)/meshes/so101/moving_jaw_so101_v1.stl"/>
        </geometry>
      </collision>
    </link>
    <!-- Joint from gripper to moving_jaw_so101_v1 -->
    <joint name="${prefix}gripper" type="revolute">
      <origin xyz="0.0202 0.0188 -0.0234" rpy="1.5708 -5.14108e-17 -1.38655e-14"/>
      <parent link="gripper"/>
      <child link="moving_jaw_so101_v1"/>
      <axis xyz="0 0 1"/>
      <limit effort="10" velocity="10" lower="-0.174533" upper="1.74533"/>
    </joint>

    <!-- Frame gripperframe (dummy link + fixed joint) -->
    <link name="${prefix}gripperframe"/>
    <joint name="${prefix}gripperframe_frame" type="fixed">
      <origin xyz="-0.0079 -0.000218121 -0.0981274" rpy="0 1.5708 0"/>
      <parent link="${prefix}gripper"/>
      <child link="${prefix}gripperframe"/>
    </joint>

    <joint name="${prefix}moving_Jaw_tip_joint" type="fixed">
      <origin rpy="0 0 0" xyz="-0.01 -0.0745 0.019"/>
      <parent link="${prefix}moving_jaw_so101_v1"/>
      <child link="${prefix}moving_jaw_tip"/>
    </joint>
    <link name="${prefix}moving_jaw_tip"/>

  </xacro:macro>
</robot>
