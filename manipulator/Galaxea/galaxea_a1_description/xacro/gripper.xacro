<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="Gripper" params="name">
    <xacro:property name="prefix" value="${name + '_' if name else ''}"/>
    <link name="${prefix}gripper_link">
      <inertial>
        <origin xyz="-0.0311072323899603 1.17979991887118E-08 7.93394685505433E-08"/>
        <mass value="0.604"/>
        <inertia
            ixx="0.000175881544189539"
            ixy="-6.06026450851008E-11"
            ixz="5.30643405624365E-10"
            iyy="9.86379407701341E-05"
            iyz="-8.18686692495892E-08"
            izz="0.000165121280580029"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/gripper/gripper_link.obj"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/gripper/gripper_link.obj"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}gripper_finger_link1">
      <inertial>
        <origin xyz="-0.0195895895552112 -0.0151136845490034 0.00542254359093075"/>
        <mass value="0.027"/>
        <inertia
            ixx="2.40569358477209E-06"
            ixy="3.9898459609048E-07"
            ixz="5.12152762183641E-08"
            iyy="5.71079298307516E-06"
            iyz="6.19467902008363E-08"
            izz="6.48482183930358E-06"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/gripper/gripper_finger1.obj"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/gripper/gripper_finger1.obj"/>
        </geometry>
      </collision>
    </link>
    <joint name="${prefix}gripper_finger_joint1" type="prismatic">
      <origin xyz="0.03689 0.013453 0.00012059"/>
      <parent link="${prefix}gripper_link"/>
      <child link="${prefix}gripper_finger_link1"/>
      <axis xyz="0 1 0"/>
      <limit lower="0" upper="0.05" effort="100" velocity="0.25"/>
    </joint>
    <link name="${prefix}gripper_finger_link2">
      <inertial>
        <origin xyz="-0.0195895857999098 0.0151136893508115 -0.00542254357246619"/>
        <mass value="0.027"/>
        <inertia
            ixx="2.40569340151687E-06"
            ixy="-3.98983784827124E-07"
            ixz="-5.12152683073981E-08"
            iyy="5.71079321589929E-06"
            iyz="6.19467953006536E-08"
            izz="6.48482187274222E-06"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/gripper/gripper_finger2.obj"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://$(find galaxea_a1_description)/meshes/gripper/gripper_finger2.obj"/>
        </geometry>
      </collision>
    </link>
    <joint name="${prefix}gripper_finger_joint2" type="prismatic">
      <origin xyz="0.03689 -0.013453 -0.00012059"/>
      <parent link="${prefix}gripper_link"/>
      <child link="${prefix}gripper_finger_link2"/>
      <axis xyz="0 -1 0"/>
      <limit lower="0" upper="0.05" effort="100" velocity="0.25"/>
      <mimic joint="${prefix}gripper_finger_joint1" multiplier="1" offset="0"/>
    </joint>
  </xacro:macro>
</robot>